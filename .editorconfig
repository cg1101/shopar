# https: //editorconfig.org/
# https: //editorconfig-specification.readthedocs.io/en/latest/

# default hehavior
[*]
indent_style = space
indent_size = 2
tab_width = 2
# end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
root = true # stop further searching

[*.py]
indent_style = space
indent_size = tab
trim_trailing_whitespace = unset # keep spaces in indented block for easy pasting
tab_width = 4
end_of_line = lf

[*.js]
end_of_line = lf

[makefile*]
indent_style = tab
indent_size = 4
